{
  "name": "fcp-cv-postdeployment-tests",
  "version": "0.0.0",
  "type": "module",
  "description": "",
  "engines": {
    "node": ">=22.13.1"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "aliases": {
    "~": ".",
    "page-objects": "test/page-objects",
    "components": "test/components"
  },
  "scripts": {
    "clean": "rm -rf allure-results && rm -rf allure-report",
    "test": "npx bddgen && npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:basic": "npx bddgen && npx playwright test --grep @basic",
    "test:intermediate": "npx bddgen && npx playwright test --grep @intermediate",
    "test:advanced": "npx bddgen && npx playwright test --grep @advanced",
    "format": "prettier --write 'test/**/*.js' '**/*.{js,md,json,config.js}'",
    "format:check": "prettier --check 'test/**/*.js' '**/*.{js,md,json,config.js}'",
    "git:pre-commit-hook": "npm run format:check && npm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "npm run setup:husky",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "report": "allure generate allure-results --single-file --clean",
    "report:publish": "npm run report; ./bin/publish-tests.sh"
  },
  "dependencies": {
    "@wdio/allure-reporter": "9.9.0",
    "@wdio/browserstack-service": "9.9.1",
    "@wdio/cli": "9.9.1",
    "@wdio/globals": "9.9.1",
    "@wdio/junit-reporter": "9.9.0",
    "@wdio/local-runner": "9.9.1",
    "@wdio/mocha-framework": "9.9.0",
    "@wdio/spec-reporter": "9.9.0",
    "allure-commandline": "2.32.0",
    "esm-module-alias": "2.2.1",
    "global-agent": "3.0.0",
    "npm-run-all": "4.1.5",
    "playwright-bdd": "8.4.2",
    "undici": "7.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "24.10.1",
    "allure-playwright": "3.4.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-wdio": "8.24.12",
    "husky": "9.1.7",
    "playwright-bdd": "^8.4.2",
    "prettier": "3.4.2"
  }
}
